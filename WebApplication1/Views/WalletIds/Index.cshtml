@model IEnumerable<BlockchainAnalysisTool.Models.WalletId>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfAddresses)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfTransactions)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfAddresses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTransactions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Priority)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Wid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Wid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Wid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
